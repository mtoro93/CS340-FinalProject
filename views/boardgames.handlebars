<div class="table_content">
	<p>Board Game Table
	<table>
	<tbody>
		<tr>
			<th>Name</th>
			<th>Age</th>
			<th>Time</th>
			<th>Players</th>
			<th>Artist</th>
			<th>Year</th>
		</tr>
	
		{{#if filtered}}
		{{#each bg_filteredArray}}
		<tr>
			<td> {{this.name}}</td>
			<td> {{this.age_requirement}} </td>
			<td> {{this.playing_time}} </td>
			<td> {{this.max_players}} </td>
			<td> {{this.artist}} </td>
			<td> {{this.year_published}} </td>
			<td> 
			<form action="http://flip3.engr.oregonstate.edu:22725/boardgames" method="post">
				<input type="hidden" id="editID" name="bg_id" value="{{this.id}}"> </input>
				<input type="submit" id="edit" name="submit" value="edit"> </input>
			</form>
		</td>
		<td> 
			<form action="http://flip3.engr.oregonstate.edu:22725/boardgames" method="post">
				<input type="hidden" id="deleteID" name="bg_id" value="{{this.id}}">
				<input type="submit" name="submit" id="delete" value="delete">
			</form>
		</td>
		</tr>	
		{{/each}}
		{{else}}
		{{#each bg_array}}
		<tr>
			<td> {{this.name}}</td>
			<td> {{this.age_requirement}} </td>
			<td> {{this.playing_time}} </td>
			<td> {{this.max_players}} </td>
			<td> {{this.artist}} </td>
			<td> {{this.year_published}} </td>
			<td> 
			<form action="http://flip3.engr.oregonstate.edu:22725/boardgames" method="post">
				<input type="hidden" id="editID" name="bg_id" value="{{this.id}}"> </input>
				<input type="submit" id="edit" name="submit" value="edit"> </input>
			</form>
		</td>
		<td> 
			<form action="http://flip3.engr.oregonstate.edu:22725/boardgames" method="post">
				<input type="hidden" id="deleteID" name="bg_id" value="{{this.id}}">
				<input type="submit" name="submit" id="delete" value="delete">
			</form>
		</td>
		</tr>	
		{{/each}}
		{{/if}}
		
		
	</tbody>	
	</table>
</div>
<div class="form_content">	
	<p>Board Game Table Form
	<form action="http://flip3.engr.oregonstate.edu:22725/boardgames" method="post">
		<p>Name:
		<input type="text" required name="bg_name"> </input>
		<p>Age Requirement:
		<input type="number" name="bg_age"> </input>
		<p>Playing Time:
		<input type="number" name="bg_time"> </input>
		<p>Max Players:
		<input type="number" name="bg_max"> </input>
		<p>Artist:
		<input type="text" name="bg_artist"> </input>
		<p>Year Published:
		<input type="number" required name="bg_year"> </input>
		<br>
		<input type="submit" name="submit" value="bg_add"> </input>
	</form>
</div>
<div class="filter">
	<p>Board Game Table Filter
	<form action="http://flip3.engr.oregonstate.edu:22725/boardgames" method="post">
		<p>Year Published is greater than:
		<select name="bg_year">
		{{#each bg_yearArray}}
		<option value="{{this.year_published}}"> {{this.year_published}}</option>
		{{/each}}
		</select>
		<br>
		<input hidden name="type" value="greater"></input>
		<input type="submit" name="submit" value="bg_filter"> </input>
	</form>
	<form action="http://flip3.engr.oregonstate.edu:22725/boardgames" method="post">
		<p>Year Published is less than:
		<select name="bg_year">
		{{#each bg_yearArray}}
		<option value="{{this.year_published}}"> {{this.year_published}}</option>
		{{/each}}
		</select>
		<br>
		<input hidden name="type" value="less"></input>
		<input type="submit" name="submit" value="bg_filter"> </input>
	</form>
	<form action="http://flip3.engr.oregonstate.edu:22725/boardgames" method="post">
		<p>Unfilter Year
		<br>
		<input type="submit" name="submit" value="bg_unfilter"> </input>
	</form>
</div>
