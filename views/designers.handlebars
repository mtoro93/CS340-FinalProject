<div class="table_content">
	<p>Designers Table
	<table>
	<tbody>
		<tr>
			<th>Name</th>
			<th>Country</th>
		</tr>
		{{#each d_array}}
		<tr>
			<td> {{this.name}}</td>
			<td> {{this.country}} </td>
		</tr>
		{{/each}}
	</tbody>	
	</table>
</div>	
<div class="form_content">	
	<p>Designer Table Form
	<form action="http://flip3.engr.oregonstate.edu:22725/designers" method="post">
		<p>Name:
		<input type="text" required name="d_name"> </input>
		<p>Country:
		<input type="text" name="d_country"> </input>
		<br>
		<input type="submit" name="submit" value="d_add"> </input>
	</form>
</div>	

<HR WIDTH="60%" ALIGN="LEFT">

<div class="table_content">
	<p>BG Designers Table
	<table>
	<tbody>
		<tr>
			<th>D Name</th>
			<th>BG Name</th>
		</tr>
		{{#each bgd_array}}
		<tr>
			<td> {{this.d_name}} </td>
			<td> {{this.bg_name}}</td>
		</tr>
		{{/each}}
	</tbody>	
	</table>
</div>	
<div class="form_content">		
	<p>Board Game Designer Table Form
	<form action="http://flip3.engr.oregonstate.edu:22725/designers" method="post">
		<p>D Name:
		<select name="d_name">
		{{#each d_array}}
		<option value="{{this.name}}"> {{this.name}}</option>
		{{/each}}
		</select>
		<p>BG Name:
		<select name="bg_name">
		{{#each bg_array}}
		<option value="{{this.name}}"> {{this.name}}</option>
		{{/each}}
		</select>
		<br>
		<input id="bgd_submit" type="submit" name="submit" value="bgd_add"> </input>
	</form>
</div>	

