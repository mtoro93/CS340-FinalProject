<div class="table_content">
	<p>Mechanisms Table
	<table>
	<tbody>
		<tr>
			<th>Mechanism</th>
		</tr>
		{{#each m_array}}
		<tr>
			<td>{{this.mechanism}}</td>
		</tr>
		{{/each}}
	</tbody>	
	</table>
</div>	
<div class="form_content">	
	<p>Mechanism Table Form
	<form action="http://flip3.engr.oregonstate.edu:22725/mechanisms" method="post">
		<p>Type:
		<input type="text" required name="m_mechanism"> </input>
		<br>
		<input type="submit" name="submit" value="m_add"> </input>
	</form>
</div>	

<HR WIDTH="60%" ALIGN="LEFT">

<div class="table_content">
	<p>BG Mechanisms Table
	<table>
	<tbody>
		<tr>
			<th>BG Name</th>
			<th>M Name</th>
		</tr>
		{{#each bgm_array}}
		<tr>
			<td> {{this.bg_name}}</td>
			<td> {{this.m_name}} </td>
			<td> 
				<form action="http://flip3.engr.oregonstate.edu:22725/mechanisms" method="post">
						<input type="hidden" name="bg_id" value="{{this.bg_id}}">
						<input type="hidden" name="m_id" value="{{this.m_id}}">
						<input type="submit" name="submit" value="bgm_delete">
				</form>
			</td>
		</tr>	
		{{/each}}
	</tbody>	
	</table>
</div>
<div class="form_content">			
	<p>Board Game Mechanism Table Form
	<form action="http://flip3.engr.oregonstate.edu:22725/mechanisms" method="post">
		<p>BG Name:
		<select name="bg_name">
		{{#each bg_array}}
		<option value="{{this.name}}"> {{this.name}}</option>
		{{/each}}
		</select>
		<p>M Name:
		<select name="m_mechanism">
		{{#each m_array}}
		<option value="{{this.mechanism}}"> {{this.mechanism}}</option>
		{{/each}}
		</select>
		<br>
		<input type="submit" name="submit" value="bgm_add"> </input>
	</form>
</div>